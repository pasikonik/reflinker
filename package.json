{
	"name": "reflinker",
	"private": true,
	"version": "0.0.2",
	"type": "module",
	"scripts": {
		"dev": "cross-env NODE_ENV=development vite dev",
		"dev:with-cron": "cross-env NODE_ENV=development node -r dotenv/config scripts/start-dev-with-cron.js",
		"build": "vite build",
		"start": "cross-env RUN_CRON=true node -r dotenv/config node_modules/vite/bin/vite.js preview --host --port 3000",
		"up": "npm run build && npm run start",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"db:local:up": "docker compose up -d",
		"db:local:down": "docker compose down -v",
		"db:local:reset": "npm run db:local:down && npm run db:local:up",
		"db:local:push": "cross-env NODE_ENV=development drizzle-kit push",
		"db:local:migrate": "cross-env NODE_ENV=development drizzle-kit migrate",
		"db:local:studio": "cross-env NODE_ENV=development drizzle-kit studio",
		"db:prod:push": "cross-env NODE_ENV=production drizzle-kit push",
		"db:prod:migrate": "cross-env NODE_ENV=production drizzle-kit migrate",
		"db:prod:studio": "cross-env NODE_ENV=production drizzle-kit studio"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@types/node": "^20.19.0",
		"dotenv": "^16.5.0",
		"drizzle-kit": "^0.30.2",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.2.6"
	},
	"dependencies": {
		"axios": "^1.9.0",
		"cross-env": "^7.0.3",
		"drizzle-orm": "^0.40.0",
		"node-cron": "^4.1.0",
		"postgres": "^3.4.5",
		"puppeteer": "^24.10.0"
	}
}
